<!doctype html>
<html>
  <head>
    <script src='https://cdn.firebase.com/js/client/2.2.1/firebase.js'></script>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
    <link rel='stylesheet' type='text/css' href='/resources/tutorial/css/example.css'>
  </head>
  <body>
    <div id='messagesDiv'></div>
    <input type='text' id='titleInput' placeholder='Title'>
    <input type='text' id='classificationInput' placeholder='Classification'>
    <input type='text' id='recipeInput' placeholder='Recipe'>
    <script>
      var myDataRef = new Firebase('https://t8fzc179mn8.firebaseio-demo.com/');
      $('#recipeInput').keypress(function (e) {
        if (e.keyCode == 13) {
          var title = $('#titleInput').val();
          var classification = $('#classificationInput').val();
          var recipe = $('#recipeInput').val();
          myDataRef.push({title: title, classification: classification, recipe: recipe});
          $('#recipeInput').val('');
        }
      });
      myDataRef.on('child_added', function(snapshot) {
        var message = snapshot.val();
        displayChatMessage(message.title, message.classification, message.recipe);
      });
      function displayChatMessage(name, text) {
        $('<div/>').text(text).prepend($('<em/>').text(name+': ')).appendTo($('#messagesDiv'));
        $('#messagesDiv')[0].scrollTop = $('#messagesDiv')[0].scrollHeight;
      };
    </script>
  </body>
</html>
